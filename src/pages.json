{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui rules are configured as follows
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^Xtx(.*)": "@/components/Xtx$1.vue"
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/record_list/record_list",
			"style": {
				"navigationBarTitleText": "安装记录"
			}
		},
		{
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/stone_type_list/stone_type_list",
			"style": {
				"navigationBarTitleText": "大理石分类管理"
			}
		},
		{
			"path": "pages/stone_types_add/stone_types_add",
			"style": {
				"navigationBarTitleText": "新增大理石分类"
			}
		},
		{
			"path": "pages/stone_manage/stone_manage",
			"style": {
				"navigationBarTitleText": "大理石管理"
			}
		},
		{
			"path": "pages/stone/stone",
			"style": {
				"navigationBarTitleText": "大理石详情"
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{
			"path": "pages/search_result/search_result",
			"style": {
				"navigationBarTitleText": "搜索大理石"
			}
		},
		{
			"path": "pages/record_manage/record_manage",
			"style": {
				"navigationBarTitleText": "记录管理"
			}
		},
    {
			"path": "pages/record/record",
			"style": {
				"navigationBarTitleText": "记录详情"
			}
		}
	],
	"permission": {
		"scope.userLocation": {
			"desc": "你的位置信息将用于小程序位置接口的效果展示" // 高速公路行驶持续后台定位
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	// 设置 TabBar
	"tabBar": {
		"color": "#333",
		"selectedColor": "#27ba9b",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabs/home_default.png",
				"selectedIconPath": "static/tabs/home_selected.png"
			},
			{
				"text": "分类",
				"pagePath": "pages/category/category",
				"iconPath": "static/tabs/category_default.png",
				"selectedIconPath": "static/tabs/category_selected.png"
			},
			{
				"text": "记录",
				"pagePath": "pages/record_list/record_list",
				"iconPath": "static/tabs/work_record.png",
				"selectedIconPath": "static/tabs/work_record_selected.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/my/my",
				"iconPath": "static/tabs/user_default.png",
				"selectedIconPath": "static/tabs/user_selected.png"
			}
		]
	}
}
